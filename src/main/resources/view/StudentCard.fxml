<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" prefHeight="50.0" prefWidth="85.0">
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <children>
            <Circle fx:id="circle" radius = '70' stroke="BLACK" strokeType="INSIDE" />
        </children>
    </VBox>
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
                <Text text = "Index:" fill="burlywood" />
                <Label fx:id="index" styleClass="cell_small_label" text="\$index" />
            </HBox>
            <FlowPane fx:id="tags" />
            <HBox>
                <Text text = "Class:    " fill="burlywood" />
                <Label fx:id="className" styleClass="cell_small_label" text="\$class" />
            </HBox>
            <HBox>
                <Text text = "Parent/Next of Kin Name:    " fill="burlywood" />
                <Label fx:id="parentName" styleClass="cell_small_label" text="\$parentName" />
            </HBox>
            <HBox>
                <Text text = "Age:    " fill="burlywood" />
                <Label fx:id="age" styleClass="cell_small_label" text="\$age" />
            </HBox>
            <HBox>
                <Text text = "Gender:   " fill="burlywood" />
                <Label fx:id="sex" styleClass="cell_small_label" text="\$sex" />
            </HBox>
            <HBox>
                <Text text = "Email:    " fill="burlywood" />
                <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            </HBox>
            <HBox>
                <Text text = "Phone:    " fill="burlywood" />
                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
            </HBox>
            <HBox>
                <Text text = "CCA:    " fill="burlywood" />
                <Label fx:id="cca" styleClass="cell_small_label" text="\$cca" />
            </HBox>
            <HBox>
                <Text text = "Comments:    " fill="burlywood" />
                <Label fx:id="comment" styleClass="cell_small_label" text="\$cca" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
